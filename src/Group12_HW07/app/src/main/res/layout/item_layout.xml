<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_height="wrap_content">

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_alignTop="@+id/episodeIVID"
        android:layout_toRightOf="@+id/episodeIVID"
        android:layout_toEndOf="@+id/episodeIVID"
        android:layout_marginLeft="34dp"
        android:layout_marginStart="34dp"
        android:id="@+id/linearLayoutID"
        android:layout_height="35dp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView2"
        android:layout_toRightOf="@+id/textView2"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp"
        android:id="@+id/pubDateID"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        app:srcCompat="@android:color/background_light"
        android:layout_marginTop="41dp"
        android:id="@+id/episodeIVID"
        android:layout_marginLeft="31dp"
        android:layout_marginStart="31dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <TextView
        android:text="posted:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_below="@+id/linearLayoutID"
        android:layout_alignLeft="@+id/linearLayoutID"
        android:layout_alignStart="@+id/linearLayoutID" />

    <TextView
        android:text="Play Now"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/textView6"
        android:layout_alignBottom="@+id/episodeIVID"
        android:layout_alignLeft="@+id/pubDateID"
        android:layout_alignStart="@+id/pubDateID"
        android:paddingTop="15dp" />

    <ImageButton
        app:srcCompat="@drawable/ic_play_arrow_black_24dp"
        android:id="@+id/playIVID"
        android:background="@android:color/background_light"
        android:focusable="true"
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/episodeIVID"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:layout_toStartOf="@+id/pubDateID"
        android:layout_toLeftOf="@+id/pubDateID"
        android:layout_alignTop="@+id/textView6"
        android:focusableInTouchMode="false" />

</RelativeLayout>
